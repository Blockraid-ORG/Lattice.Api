// MASTER
model Category {
  id             String            @id @default(uuid())
  name           String            @db.VarChar(128)
  description    String
  isParent       Boolean?          @default(false)
  icon           String?
  parentId       String?
  order          Int               @default(1)
  frequency      FrequencyCategory
  frequencyCount Int               @default(1)
  targetYield    String

  parent    Category?  @relation("CategoryToSubcategory", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryToSubcategory")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?
  projects  Project[]

  @@map("categories")
}

model Social {
  id   String  @id @default(uuid())
  name String
  icon String?

  projects ProjectSocial[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  createdBy String?
  updatedBy String?
  deletedBy String?

  @@map("socials")
}

model Verification {
  id                       String           @id @default(uuid())
  name                     String           @db.VarChar(100)
  type                     EnumUserCategory
  IDCardRequired           Boolean
  SelfieRequired           Boolean
  BussinessLicenseRequired Boolean          @default(false)
  TaxIdRequired            Boolean          @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy     String?
  updatedBy     String?
  deletedBy     String?
  projectOwners ProjectOwnerVerification[]

  @@map("verifications")
}

model Chain {
  id         String    @id @default(uuid())
  name       String    @db.VarChar(32)
  ticker     String    @db.VarChar(8)
  logo       String?
  urlScanner String?
  type       ChianType

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?
  projects  ProjectChain[]

  @@map("chains")
}

model Project {
  id          String            @id @default(uuid())
  name        String            @db.VarChar(128)
  slug        String            @db.VarChar(128)
  logo        String
  banner      String?
  ticker      String?
  decimals    Int               @default(18)
  totalSupply Decimal           @db.Decimal(65, 18)
  detail      String            @db.Text()
  status      EnumProjectStatus @default(PENDING)
  userId      String
  user        User              @relation(fields: [userId], references: [id])
  categoryId  String
  category    Category          @relation(fields: [categoryId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy           String?
  updatedBy           String?
  deletedBy           String?
  chains              ProjectChain[]
  allocations         ProjectAllocation[]
  reviewLogs          ProjectReviewLog[]
  socials             ProjectSocial[]
  Presales            Presales[]
  transactionPresales TransactionPresales[]

  @@map("projects")
}

model ProjectChain {
  projectId String
  chainId   String

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  chain   Chain   @relation(fields: [chainId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?

  @@id([projectId, chainId])
  @@map("project_chains")
}

model ProjectAllocation {
  id        String   @id @default(uuid())
  projectId String
  name      String   @db.VarChar(128)
  supply    Int
  vesting   Int
  startDate DateTime
  isPresale Boolean  @default(false)

  project Project @relation(fields: [projectId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?

  @@map("project_allocations")
}

// ReviewProjectLog
model ProjectReviewLog {
  id        String            @id @default(uuid())
  projectId String
  project   Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  status    EnumProjectStatus @default(PENDING)
  note      String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?

  @@map("project_review_logs")
}

model ProjectSocial {
  projectId String
  socialId  String
  url       String @db.VarChar(255)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  social  Social  @relation(fields: [socialId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?

  @@id([projectId, socialId])
  @@map("project_socials")
}

// Presales
model Presales {
  id              String   @id @default(uuid())
  projectId       String   @unique
  chainId         String
  hardcap         Decimal  @db.Decimal(65, 18)
  price           Decimal  @db.Decimal(65, 18)
  maxContribution Decimal  @db.Decimal(65, 18)
  duration        DateTime
  unit            String   @db.VarChar(64)

  project Project @relation(fields: [projectId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy   String?
  updatedBy   String?
  deletedBy   String?
  trasactions TransactionPresales[]

  @@map("project_presales")
}

// TransactionPresales
model TransactionPresales {
  id              String  @id @default(uuid())
  projectId       String
  presaleId       String
  userId          String
  price           Decimal @db.Decimal(65, 18)
  count           Int
  transactionHash String

  project Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  presale Presales @relation(fields: [presaleId], references: [id], onDelete: Cascade)
  users   User[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?

  @@map("transaction_presales")
}

// ProjectOwnerVerification
model ProjectOwnerVerification {
  userId         String
  verificationId String

  idCard          String? @db.VarChar(255)
  selfie          String? @db.VarChar(255)
  bisnisLicense   String? @db.VarChar(255)
  taxId           String? @db.VarChar(255)
  submittedAt     DateTime
  approvedAt      DateTime
  rejectedAt      DateTime
  status          EnumVerificationStatus @default(PENDING)
  rejectionReason String?

  verification Verification @relation(fields: [verificationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?

  @@id([userId, verificationId]) // composite key
  @@map("project_owner_verifications")
}

// ReviewVerificationLog
model ReviewVerificationLog {
  id        String                 @id @default(uuid())
  status    EnumVerificationStatus
  note      String?
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt
  deletedAt DateTime?

  createdBy String?
  updatedBy String?
  deletedBy String?

  @@map("review_verification_log")
}

